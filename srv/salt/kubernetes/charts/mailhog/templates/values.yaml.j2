# -*- coding: utf-8 -*-
# vim: ft=jinja

{#- Get the `tplroot` from `tpldir` #}
{% from tpldir ~ "/map.jinja" import mailhog with context %}
{%- set public_domain = pillar['public-domain'] -%}

auth:
    enabled: True
    existingSecret: mailhog-users
    fileName: auth.txt

extraEnv:
  - name: MH_HOSTNAME
    value: "{{ mailhog.ingress_host }}.{{ public_domain }}"