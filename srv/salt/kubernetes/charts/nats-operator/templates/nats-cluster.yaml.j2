apiVersion: nats.io/v1alpha2
kind: NatsCluster
metadata:
  name: nats-cluster
  namespace: nats-io
spec:
  size: 3
  version: {{ nats_operator.nats.version }}
  pod:
    enableMetrics: true
    metricsImage: "synadia/prometheus-nats-exporter"