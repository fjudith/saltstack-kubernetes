# -*- coding: utf-8 -*-
# vim: ft=jinja

{#- Get the `tplroot` from `tpldir` #}
{% from tpldir ~ "/map.jinja" import rook_ceph with context %}

apiVersion: apps/v1
kind: Deployment
metadata:
  name: ceph-exporter
  namespace: rook-ceph
  labels:
    app: ceph-exporter
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ceph-exporter
  template:
    metadata:
      labels:
        app: ceph-exporter
    spec:
      dnsPolicy: ClusterFirstWithHostNet
      containers:
      - name: rook-ceph-tools
        image: {{ rook_ceph.image }}
        command: ["/tini"]
        args: ["-g", "--", "/usr/local/bin/toolbox.sh"]
        imagePullPolicy: IfNotPresent
        env:
          - name: ROOK_CEPH_USERNAME
            valueFrom:
              secretKeyRef:
                name: rook-ceph-mon
                key: ceph-username
          - name: ROOK_CEPH_SECRET
            valueFrom:
              secretKeyRef:
                name: rook-ceph-mon
                key: ceph-secret
        securityContext:
          privileged: true
        volumeMounts:
          - mountPath: /dev
            name: dev
          - mountPath: /sys/bus
            name: sysbus
          - mountPath: /lib/modules
            name: libmodules
          - name: mon-endpoint-volume
            mountPath: /etc/rook
          - name: etc-ceph-shared
            mountPath: /etc/ceph
      - name: ceph-exporter
        image: {{ rook_ceph.exporter_image }}
        imagePullPolicy: IfNotPresent
        env:
          - name: ROOK_CEPH_USERNAME
            valueFrom:
              secretKeyRef:
                name: rook-ceph-mon
                key: ceph-username
          - name: ROOK_CEPH_SECRET
            valueFrom:
              secretKeyRef:
                name: rook-ceph-mon
                key: ceph-secret
        ports:
        - containerPort: 9128
          name: http-metrics
          protocol: TCP
        volumeMounts:
          - name: etc-ceph-shared
            mountPath: /etc/ceph
      hostNetwork: true
      volumes:
        - name: dev
          hostPath:
            path: /dev
        - name: sysbus
          hostPath:
            path: /sys/bus
        - name: libmodules
          hostPath:
            path: /lib/modules
        - name: mon-endpoint-volume
          configMap:
            name: rook-ceph-mon-endpoints
            items:
            - key: data
              path: mon-endpoints
        - name: etc-ceph-shared
          emptyDir: {}

---
apiVersion: v1
kind: Service
metadata:
  name: ceph-exporter
  namespace: rook-ceph
  annotations:
    prometheus.io/port: "9128"
    prometheus.io/scrape: "true"
  labels:
    app: ceph-exporter
    rook_cluster: rook-ceph 
spec:
  ports:
  - name: http-metrics
    port: 9128
    protocol: TCP
    targetPort: 9128
  selector:
    app: ceph-exporter
  type: ClusterIP